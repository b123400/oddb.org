source "http://rubygems.org"
# ruby "1.9.3" # don't specify a ruby version as I want to be able to test via travis using several versions

source "http://rubygems.org"

group :development, :test do
  gem "rake"
  gem 'flexmock'
  gem 'hoe'
  gem 'hoe-travis'
  gem 'minitest'
  gem 'racc'
  gem 'simplecov'
  gem 'travis-lint'
end

group :test do
  gem 'rspec'
  gem 'watir'
  gem 'watir-webdriver'
  gem 'page-object'
end

group :debugger do
  gem 'pry'
  gem 'pry-debugger'
end